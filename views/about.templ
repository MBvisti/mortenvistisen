templ aboutSocialRow(href string, label string) {
	<a
		href={ href }
		class="flex items-center gap-3 rounded px-2 py-1.5 text-sm text-base-content/65 transition hover:bg-base-100 hover:text-base-content"
	>
		if label == "Follow on X" {
			@aboutIconX()
		}
		if label == "Follow on YouTube" {
			@aboutIconYouTube()
		}
		if label == "Follow on Twitch" {
			@aboutIconTwitch()
		}
		if label == "Follow on GitHub" {
			@aboutIconGitHub()
		}
		if label == "Follow on LinkedIn" {
			@aboutIconLinkedIn()
		}
		<span>{ label }</span>
	</a>
}

templ About() {
	@base(
		components.SetTitle("About"),
		components.SetDescription("Software engineer with 8 years of experience building technical products across startups and SMEs. Writing Go, building distributed systems, and exploring AI agents."),
		components.SetSlug("/about"),
	) {
		<main class="container mx-auto bg-base-100 flex-1 px-4 sm:px-6 lg:px-8">
			<section class="mx-auto grid w-full max-w-5xl gap-12 pb-20 pt-12 sm:pb-24 sm:pt-16 lg:grid-cols-[minmax(0,1fr)_320px] lg:gap-16 lg:pt-20">
				<article class="max-w-3xl text-left">
					<h1 class="text-left text-3xl font-bold tracking-tight text-base-content sm:text-4xl lg:text-5xl">
						About
					</h1>
					<div class="mt-8 space-y-6 text-left text-base leading-8 text-base-content/65 sm:text-lg sm:leading-9">
						<p>
							I studied finance, quickly realized I'd rather build things than model spreadsheets, and pivoted into software engineering. For the past 8 years I've been building technical products across startups and SMEs — from legal tech to green tech, media to pharma — picking up Go, Ruby, TypeScript, and way too much React along the way.
						</p>
						<p>
							These days I mostly write Go and actively advocate for building web apps with traditional, server-rendered tools. I'm also deep into distributed systems, helping companies build things that actually scale. On the side, I'm building AI agents and exploring how LLMs can enhance "old school" web tech like traditional MPAs — think less hype, more practical. <a href="https://github.com/mbvlabs/andurel" class="text-primary hover:text-primary/80 transition">andurel</a> is one of those experiments.
						</p>
						<p>
							If there's one thing I've learned, it's that keeping software simple for as long as possible is a superpower. It lets you stay agile, ship fast, and avoid drowning in technical debt. My background in both finance and engineering means I tend to think about code in terms of what actually moves the needle for the business — not just what's technically fun to build.
						</p>
					</div>
				</article>
				<aside class="justify-self-start lg:sticky lg:top-24 lg:self-start">
					<div class="space-y-6">
						<div class="overflow-hidden rounded-2xl border border-base-content/10 bg-base-200">
							<img
								src="https://images.unsplash.com/photo-1462331940025-496dfbfc7564?auto=format&fit=crop&w=800&q=80"
								alt="Portrait"
								class="h-[360px] w-full object-cover grayscale"
								loading="lazy"
							/>
						</div>
						<div class="border-y border-base-content/10 py-4">
							@aboutSocialRow("https://x.com/mbvisti", "Follow on X")
							@aboutSocialRow("https://github.com/mbvisti", "Follow on GitHub")
							@aboutSocialRow("https://linkedin.com/in/mortenvistisen", "Follow on LinkedIn")
							@aboutSocialRow("https://www.youtube.com/@mbvlabs", "Follow on YouTube")
							@aboutSocialRow("https://twitch.tv/mbvlabs", "Follow on Twitch")
						</div>
						<a href="mailto:blog@mortenvistisen.com" class="flex items-center gap-3 rounded px-2 py-1.5 text-sm text-base-content/65 transition hover:bg-base-100 hover:text-base-content">
							@aboutIconEmail()
							<span>blog@mortenvistisen.com</span>
						</a>
					</div>
				</aside>
			</section>
		</main>
	}
}
