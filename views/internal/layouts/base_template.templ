package layouts

import "github.com/MBvisti/grafto/views/internal/components"

templ Base(content templ.Component, head components.Head) {
	<!DOCTYPE html>
	<html lang="en" data-theme="dark" class="h-full">
		@head.Render()
		<body class="container mx-auto h-full bg-gray-800">
			@components.Nav()
			@content
			<script src="/static/js/htmx.min.js"></script>
			<script src="/static/js/alpine.js"></script>
			<script src="/static/js/preline/preline.js"></script>
		</body>
	</html>
}
