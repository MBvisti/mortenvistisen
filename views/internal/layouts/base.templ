templ footer() {
	<footer class="bg-base-300 w-full">
		<div class="py-4 px-10 bg-base-100 max-w-screen-xl mx-auto grid grid-cols-4 md:grid-cols-6 lg:grid-cols-12">
			<div class="col-span-full md:col-start-2 md:col-end-6 lg:col-start-3 lg:col-end-11 md:my-10 flex flex-col items-center justify-between gap-6">
				<div class="flex flex-wrap justify-center gap-x-6 gap-y-1 text-sm font-medium text-zinc-200">
					<a class="transition hover:text-teal-400" href="/">Home</a>
					<a class="transition hover:text-teal-400" href="/articles">Articles</a>
					<a class="transition hover:text-teal-400" href="/about">About</a>
					<a class="transition hover:text-teal-400" target="_blank" href="https://golangblogcourse.com">Golang Course</a>
				</div>
				<p class="text-sm text-zinc-500">
					{ fmt.Sprintf("Â© %v", time.Now().Year()) } <a href="https://mbvlabs.com">mbvlabs</a>. All rights reserved.
				</p>
			</div>
		</div>
	</footer>
}

templ Base(head templ.Component) {
	<!DOCTYPE html>
	<html lang="en" data-theme="halloween" class="dark max-w-screen">
		@head
		<body class="flex flex-col min-w-screen h-screen">
			@header()
			{ children... }
			@footer()
			<script src="/static/js/htmx.min.js"></script>
			<script src="/static/js/alpine.js"></script>
		</body>
	</html>
}
