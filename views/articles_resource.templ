							<div
								id="editor-container"
								class="flex-1 min-h-[500px] rounded-md bg-background"
							>
								<!-- Placeholder for WYSIWYG editor -->
								<textarea
									id="editorTarget"
									name="content"
									class="h-full w-full p-4"
								></textarea>
							</div>
						</fieldset>
