{
	"name": "grafto",
	"version": "1.0.0",
	"author": "",
	"license": "ISC",
	"scripts": {
		"watch-css": "tailwind --poll -c ./tailwind/config.js -i ./tailwind/base.css -o ../static/css/output.css --watch",
		"build-css": "npx tailwindcss -c ./tailwind/config.js -i ./tailwind/base.css -o ../static/css/output.css --minify",
		"build-trix": "esbuild --bundle --minify --outfile=../static/js/trix.min.js ./js/trix.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/MBvisti/grafto.git"
	},
	"dependencies": {
		"@rails/actiontext": "^7.2.100",
		"@tailwindcss/forms": "^0.5.7",
		"@tailwindcss/typography": "^0.5.10",
		"trix": "^2.1.5"
	},
	"devDependencies": {
		"daisyui": "^4.12.10",
		"esbuild": "^0.23.1",
		"tailwindcss": "^3.4.1"
	}
}
