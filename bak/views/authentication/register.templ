package authentication

import (
	"github.com/MBvisti/mortenvistisen/views"
	"github.com/MBvisti/mortenvistisen/views/components"
	"github.com/MBvisti/mortenvistisen/views/layouts"
	"github.com/MBvisti/mortenvistisen/views/paths"
)

var (
	UsernameField        string = "UsernameField"
	EmailField           string = "EmailField"
	PasswordField        string = "PasswordField"
	ConfirmPasswordField string = "ConfirmPasswordField"
)

type RegisterFormProps struct {
	InternalError   bool
	SuccessRegister bool
	Fields          map[string]components.InputFieldProps
	CsrfToken       string
}

templ RegisterForm(data RegisterFormProps) {
	if data.SuccessRegister {
		@formFlagWrapper() {
			@components.SuccessFlag("Your account has been created!", nil)
		}
	}
	if data.InternalError {
		@formFlagWrapper() {
			@components.ErrorFlag("An error occurred that we could not recover from.")
		}
	}
	<div hx-target="this" hx-swap="outerHTML" class="rounded-lg p-4 bg-base-200 flex flex-col items-center col-span-4 md:col-start-2 md:col-end-6 lg:col-span-4 lg:col-start-5 shadow-xl">
		<div class="text-center w-full">
			<h1 class="block text-2xl font-bold text-white">Register User</h1>
			<p class="mt-2 text-sm md:text-base text-gray-400">
				Already have an account?
				<a
					class="btn btn-xs btn-outline btn-secondary"
					href={ paths.GetSafeURL(ctx, paths.LoginPage) }
				>
					Sign in
				</a>
			</p>
		</div>
		<div class="mt-5 w-full">
			<form hx-post={ paths.Get(ctx, paths.RegisterUser) } method="post">
				<input type="hidden" name="gorilla.csrf.Token" value={ data.CsrfToken }/>
				<div class="grid gap-y-4">
					<div>
						@components.InputField("Email", "email", "email", "Enter your email", templ.Attributes{"required": true}, data.Fields[EmailField])
					</div>
					<div>
						@components.InputField("Password", "password", "password", "Enter your password", templ.Attributes{"required": true, "minLength": "8"}, data.Fields[PasswordField])
					</div>
					<div>
						@components.InputField("Confirm Password", "password", "confirm_password", "Repeat your password", templ.Attributes{"required": true, "minLength": "8"}, data.Fields[PasswordField])
					</div>
					<button
						type="submit"
						class="btn btn-primary mt-5 py-3 px-4"
					>
						Register
					</button>
				</div>
			</form>
		</div>
	</div>
}

templ RegisterPage(data RegisterFormProps) {
	@layouts.Base(
		views.Head(
			ctx,
			views.WithTitle("Registration"),
		),
	) {
		<main class="container mx-auto my-auto grid grid-cols-4 px-4 md:grid-cols-6 lg:grid-cols-12">
			@RegisterForm(data)
		</main>
	}
}
